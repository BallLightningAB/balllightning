{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**/*",
      "!src/paraglide/**/*",
      ".vscode/**/*",
      "index.html",
      "vite.config.ts",
      "!src/routeTree.gen.ts",
      "!src/styles.css",
      "specs/**/*",
      "!specs/archived/**/*",
      "!**/*.md",
      "!**/*.mdx",
      "!**/*.yaml",
      "!**/*.yml"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "nursery": {
        "useSortedClasses": "off",
        "useConsistentArrowReturn": "off"
      },
      "style": {
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case", "PascalCase"]
          }
        },
        "useImportType": "off",
        "noNegationElse": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      },
      "a11y": {
        "useGenericFontNames": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "extends": ["ultracite/core", "ultracite/remix"]
}
